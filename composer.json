{
    "name": "q2a/question2answer",
    "description": "Question2Answer is a free and open source platform for Q&A sites, running on PHP/MySQL.",
    "type": "project",
    "license": "GPL-2.0",
    "homepage": "https://www.question2answer.org/",
    "authors": [
        {
            "name": "Gideon Greenspan",
            "homepage": "http://www.gidgreen.com/"
        }
    ],
    "require": {
        "phpmailer/phpmailer": "^5.2",
        "ircmaxell/password-compat": "^1.0",
        "htmlawed/htmlawed": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "scripts": {
        "test": [
            "@phpunit",
            "@phpcs"
        ],
        "phpunit": "phpunit --bootstrap qa-tests/autoload.php ./qa-tests/",
        "phpcs": "phpcs -p --report=summary --standard=./qa-tests/phpcs/ruleset.xml ./index.php ./qa-src/ ./qa-include/ ./qa-external-example/qa-external-users.php",
        "phpcs-strict": "phpcs -p --report=summary --standard=./qa-tests/phpcs/ruleset-strict.xml ./index.php ./qa-src/ ./qa-include/ ./qa-external-example/qa-external-users.php"
    }
}
